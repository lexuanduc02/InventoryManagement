@model List<InventoryManagement.Models.WarehouseModels.WarehouseViewModel>
@{
    ViewData["Title"] = "Danh mục kho hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="tblView" style="width:100%;" cellpadding="0" cellspacing="0">
    <tbody>
        <tr class="tr-view">
            <td class="td-view-left">
                <input type="submit" name="btnUpdate1" value="Cập nhật" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;btnUpdate1&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="btnUpdate1" class="button">
            </td>
            <td class="td-view-right">
                <a asp-action="Create" class="button btn-add">Thêm mới</a>
                <input type="reset" class="button" name="cmdReset" value="Mặc định">
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <table class="table table-striped table-bordered" cellspacing="0" cellpadding="3" align="Center" rules="all" border="1" id="dtgrView" style="border-style:None;width:100%;border-collapse:collapse;">
                    <tbody>
                        <tr class="header" style="background-color:#F4F4F4;font-weight:bold;">
                            <td>Tên</td>
                            <td>Mô tả</td>
                            <td>Diện tích</td>
                            <td>Số lượng trong kho</td>
                            <td style="width:10px;">&nbsp;Sửa&nbsp;</td>
                            <td style="width:10px;">&nbsp;Xóa&nbsp;</td>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td style="width:100%;">@Html.DisplayFor(modelItem => item.Description)</td>
                                <td style="width:50px;">@Html.DisplayFor(modelItem => item.Area) m2</td>
                                <td style="width:100px;"><input name="dtgrView$ctl03$txtSort" type="text" value="11" maxlength="10" id="dtgrView_txtSort_0" class="textbox" style="width:50px;">/@Html.DisplayFor(modelItem => item.StorageCapacity) @Html.DisplayFor(modelItem => item.Unit)</td>
                                <td align="center"><a href="@Url.Action("Update", "Warehouse", new { id = item.Id })"><img border="0" src="iconcp/icon_edit.gif"></a></td>
                                <td align="center"><a onclick="javascript:return confirm('Nếu bạn xoá menu (Danh mục sản phẩm) thì toàn bộ menu cấp 2 thuộc menu (Danh mục sản phẩm) sẽ bị xoá theo. Bạn chắc chắn muốn xoá menu (Danh mục sản phẩm) không?');" href="@Url.Action("Delete", "Warehouse", new { id = item.Id })"><img border="0" src="iconcp/icon_delete.gif"></a></td>
                            </tr>
                        }
                        <tr class="tr-footer" align="left" style="background-color:#F4F4F4;">
                            <td colspan="8"><span>1</span></td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr class="tr-view">
            <td class="td-view-left">

                <input type="submit" name="btnUpdate2" value="Cập nhật" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;btnUpdate2&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="btnUpdate2" class="button">
            </td>
            <td class="td-view-right">
                <input type="submit" name="btnAdd2" value="Thêm mới" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;btnAdd2&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="btnAdd2" class="button">
                <input type="reset" class="button" name="cmdReset" value="Mặc định">
            </td>
        </tr>
    </tbody>
</table>

