        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PurchaseInvoices)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
