@using InventoryManagement.Commons.Enums
@model List<InventoryManagement.Models.PartnerModels.PartnerViewModel>
@{
    ViewData["Title"] = "Danh mục đối tác";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="tblView" style="width:100%;" cellpadding="0" cellspacing="0">
    <tbody>
        <tr class="tr-view">
            <td class="td-view-left">
                <input type="submit" name="btnUpdate1" value="Cập nhật" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;btnUpdate1&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="btnUpdate1" class="button">
            </td>
            <td class="td-view-right">
                <a asp-action="Create" class="button btn-add">Thêm mới</a>
                <input type="reset" class="button" name="cmdReset" value="Mặc định">
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <table class="table table-striped table-bordered" cellspacing="0" cellpadding="3" align="Center" rules="all" border="1" id="dtgrView" style="border-style:None;width:100%;border-collapse:collapse;">
                    <thead>
                        <tr class="header" style="background-color:#F4F4F4;font-weight:bold;">
                            <td style="width:10px;"></td>
                            <td>Tên</td>
                            <td>Nhân viên</td>
                            <td>Địa chỉ</td>
                            <td>SĐT</td>
                            <td>Email</td>
                            <td>Hiện</td>
                            <td style="width:10px;">&nbsp;Sửa&nbsp;</td>
                            <td style="width:10px;">&nbsp;Xóa&nbsp;</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var activeEnums = Enum.GetValues(typeof(ActiveEnum));
                         <tr>
                             <td align="center"><input id="dtgrView_chkHot_0" type="checkbox" name="dtgrView$ctl03$chkHot"></td>
                             <td>@Html.DisplayFor(modelItem => item.Company)</td>
                             <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                             <td>@Html.DisplayFor(modelItem => item.Address)</td>
                             <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                             <td>@Html.DisplayFor(modelItem => item.Email)</td>
                             <td>
                                 <select name="dtgrView$ctl03$drlAc" id="dtgrView_drlAc_0" class="textbox drl">
                                     @for (int i = 0; i < activeEnums.Length; i++)
                                     {
                                         var selected = item.IsActive == (ActiveEnum)i ? "selected" : "";
                                         <option value="@i" selected="@selected">@activeEnums.GetValue(i)</option>
                                     }
                                 </select>
                             </td>
                             <td align="center"><a href="@Url.Action("Update", "Partner", new { id = item.Id })"><img border="0" src="/iconcp/icon_edit.gif"></a></td>
                             <td align="center"><a href="@Url.Action("Delete", "Partner", new { id = item.Id })" onclick="javascript:return confirm('Bạn chắc chắn muốn xoá Đối tác không?');"><img border="0" src="/iconcp/icon_delete.gif"></a></td>
                         </tr>
                        }
                    </tbody>
                </table>
            </td>
        </tr>
        <tr class="tr-view">
            <td class="td-view-left">
                <input type="submit" name="btnUpdate2" value="Cập nhật" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;btnUpdate2&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="btnUpdate2" class="button">
            </td>
            <td class="td-view-right">
                <input type="submit" name="btnAdd2" value="Thêm mới" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;btnAdd2&quot;, &quot;&quot;, true, &quot;&quot;, &quot;&quot;, false, false))" id="btnAdd2" class="button">
                <input type="reset" class="button" name="cmdReset" value="Mặc định">
            </td>
        </tr>
    </tbody>
</table>

