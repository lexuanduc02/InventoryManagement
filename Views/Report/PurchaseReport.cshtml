@model InventoryManagement.Models.ReportModels.PurchaseReportViewModel
@{
    ViewData["Title"] = "Báo cáo xuất kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="tblAdd" style="width:100%;" cellpadding="0" cellspacing="1">
    <tbody>
        <tr>
            <td class="td1"><div style="width:105px;">Thời gian:</div></td>
            <td class="td2">@Html.DisplayFor(modelItem => modelItem.StartDate) - @Html.DisplayFor(modelItem => modelItem.EndDate)</td>
        </tr>
        <tr>
            <td class="td1"><div style="width:105px;">Tổng tiền nhập:</div></td>
            <td class="td2">@Html.DisplayFor(modelItem => modelItem.TotalAmount)</td>
        </tr>
    </tbody>
</table>

<div class="history-table-title">Danh sách nhập hàng</div>
<table class="table table-striped table-bordered dtgrView" cellspacing="0" cellpadding="3" align="Center" rules="all" border="1" style="border-style:None;width:100%;border-collapse:collapse;">
    <thead>
        <tr class="header" style="background-color:#F4F4F4;font-weight:bold;">
            <td>Nhân viên lập</td>
            <td>Phương thức thanh toán</td>
            <td>Tình trạng</td>
            <td>Ngày lập</td>
            <td>Tổng tiền</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            if (item.InvoiceType == InventoryManagement.Commons.Enums.InvoiceTypeEnum.Invoice)
            {
                <tr>
                    <td><a @Url.Action("Update", "Product", new { id = item.Id })>@Html.DisplayFor(modelItem => item.Name)</a></td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total) VNĐ</td>
                    <td align="center"><a href="@Url.Action("Detail", "PurchaseInvoice", new { id = item.Id })"><img border="0" src="/iconcp/preview.png"></a></td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="history-table-title">Danh sách trả NCC</div>
<table class="table table-striped table-bordered dtgrView" cellspacing="0" cellpadding="3" align="Center" rules="all" border="1" style="border-style:None;width:100%;border-collapse:collapse;">
    <thead>
        <tr class="header" style="background-color:#F4F4F4;font-weight:bold;">
            <td>Nhân thực hiện</td>
            <td>Phương thức thanh toán</td>
            <td>Tình trạng</td>
            <td>Ngày lập</td>
            <td style="width:10px;">&nbsp;Chi tiết&nbsp;</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            if (item.InvoiceType == InventoryManagement.Commons.Enums.InvoiceTypeEnum.ReturnInvoice)
            {
                <tr>
                    <td><a @Url.Action("Update", "Product", new { id = item.Id })>@Html.DisplayFor(modelItem => item.Name)</a></td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total) VNĐ</td>
                    <td align="center"><a href="@Url.Action("Detail", "PurchaseInvoice", new { id = item.Id })"><img border="0" src="/iconcp/preview.png"></a></td>
                </tr>
            }
        }
    </tbody>
</table>

