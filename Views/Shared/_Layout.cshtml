@using System.Security.Claims
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@ViewData["Title"]</title>
    <link href="~/iconcp/favicon.png" rel="shortcut icon" type="image/vnd.microsoft.icon">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/layout.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    @RenderSection("Style", required: false)
</head>
<body>
    <div class="head d-flex">
        <div class="head-logo"><img src="/iconcp/logo.png"></div>
        <div class="head-welcome">
            <h1>Welcome to Control Panel</h1>
        </div>
        <div class="head-profile">
            <p style="margin:10px 0 5px 0;">Xin chào, <b>@User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Name)?.Value</b>&nbsp;<a class="dtw" asp-controller="Oauth" asp-action="Logout">/ Thoát</a></p>
        </div>
    </div>

    <div id="form1">
        <table class="main-content" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <td class="main-content-left">
                        <div style="border-bottom: #95b3de 1px solid; text-align:center; padding:5px;"><a asp-controller="Home" asp-action="Index">Control Panel Home</a></div>
                        <div style="border-top: #ffffff 1px solid; height:10px;"><img src="/iconcp/null.gif"></div>
                        <div class="col-left">
                            <div class="title-left">Quản lý danh mục</div>
                            <a class="menuleft" asp-controller="Warehouse" asp-action="index"><img class="imgmid" src="/iconcp/icon_menu.png"> Danh mục kho hàng</a>
                            <a class="menuleft" asp-controller="Category" asp-action="index"><img class="imgmid" src="/iconcp/icon_menu.png"> Danh mục nhóm hàng</a>
                            <a class="menuleft" asp-controller="Product" asp-action="index"><img class="imgmid" src="/iconcp/icon_menu.png"> Danh mục hàng hóa</a>
                            <a class="menuleft" asp-controller="Partner" asp-action="index"><img class="imgmid" src="/iconcp/icon_menu.png"> Danh mục nhà cung cấp</a>
                            <a class="menuleft" asp-controller="Customer" asp-action="index"><img class="imgmid" src="/iconcp/icon_menu.png"> Danh mục khách hàng</a>
                            <a class="menuleft" asp-controller="User" asp-action="index"><img class="imgmid" src="/iconcp/icon_menu.png"> Danh mục nhân viên</a>

                            <div class="title-left">Quản lý xuất kho</div>
                            <a class="menuleft" asp-controller="SaleInvoice" asp-action="Index"><img class="imgmid" src="/iconcp/icon_pro.png">Danh sách hóa đơn xuất</a>
                            <a class="menuleft" asp-controller="SaleInvoice" asp-action="Create"><img class="imgmid" src="/iconcp/icon_pro.png">Xuất kho bán hàng</a>
                            <a class="menuleft" asp-controller="SaleInvoice" asp-action="Return"><img class="imgmid" src="/iconcp/icon_pro.png">Xuất kho trả hàng NCC</a>

                            <div class="title-left">Quản lý nhập kho</div>
                            <a class="menuleft" asp-controller="PurchaseInvoice" asp-action="Index"><img class="imgmid" src="/iconcp/icon_pro.png">Danh sách hóa đơn nhập</a>
                            <a class="menuleft" asp-controller="PurchaseInvoice" asp-action="Create"><img class="imgmid" src="/iconcp/icon_pro.png">Nhập kho bán hàng</a>
                            <a class="menuleft" asp-controller="PurchaseInvoice" asp-action="Return"><img class="imgmid" src="/iconcp/icon_pro.png">Nhập hàng trả lại từ KH</a>
                            
                            <div class="title-left">Quản lý tồn kho</div>
                            <a class="menuleft" asp-controller="Warehouse" asp-action="ProductReport"><img class="imgmid" src="/iconcp/icon_pro.png">Theo dõi số lượng tồn kho</a>
                            <a class="menuleft" asp-controller="Warehouse" asp-action="MonthlyProductReport"><img class="imgmid" src="/iconcp/icon_pro.png">Tổng hợp tồn kho</a>
                            <a class="menuleft" asp-controller="Warehouse" asp-action="UpdateWarehouse"><img class="imgmid" src="/iconcp/icon_pro.png">Kiểm kê kho</a>

                            <div class="title-left">Báo cáo thống kê</div>
                            <a class="menuleft" asp-controller="Report" asp-action="SaleReport2"><img class="imgmid" src="/iconcp/icon_pro.png">Báo cáo danh thu bán hàng</a>
                            <a class="menuleft" asp-controller="Report" asp-action="InventoryReport"><img class="imgmid" src="/iconcp/icon_pro.png">Báo cáo tồn kho</a>
                            <a class="menuleft" asp-controller="Report" asp-action="PurchaseReport"><img class="imgmid" src="/iconcp/icon_news.png"> Báo cáo nhập kho</a>
                            <a class="menuleft" asp-controller="Report" asp-action="SaleReport"><img class="imgmid" src="/iconcp/icon_media.png"> Báo cáo xuất kho</a>

                            <div class="title-left">Khác</div>
                            <a class="menuleft" href="@Url.Action("ChangePassword", "Oauth", new { returnUrl = Context.Request.Path})"><img class="imgmid" src="/iconcp/icon_pass.png"> Đổi mật khẩu</a>
                            <a class="menuleft" asp-controller="Oauth" asp-action="Logout" onclick="javascript:return confirm('Bạn thật sự muốn thoát không?')"><img class="imgmid" src="iconcp/icon_logout.png"> Thoát</a>
                        </div>
                    </td>
                    <td class="main-content-right">
                        <div class="main-content-nav">
                            <h1 class="main-title"><span id="lblLink">@ViewData["Title"]</span></h1>
                            @await Html.PartialAsync("~/Views/Shared/_Breadcrumb.cshtml")
                        </div>
                        @RenderBody()
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="footer" cellpadding="0" cellspacing="0">
            <tbody>
                <tr>
                    <td style="padding:10px;">Xem tốt nhất trên trình duyệt Firefox hoặc Chrome với độ phân giải 1366x768 px</td>
                    <td style="text-align:right; padding:10px;">All Right Reserved by Đặng Hương Giang</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    let table = new DataTable('#dtgrView', {
        responsive: true,
        processing: true,
        lengthMenu: [15, 25, 50, 100],
    });

    let history = new DataTable('.dtgrView', {
        responsive: true,
        processing: true,
        lengthMenu: [5, 10],
    });

    $(document).ready(function () {
        $('.select2').select2();
    });
</script>

@RenderSection("Scripts", required: false)